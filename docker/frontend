FROM busybox

COPY ca-bundle.crt /etc/ssl/certs/ca-certificates.crt
COPY key.json /root/bonsai/key.json
COPY frontend-server.bin /root/bonsai/frontend-server.bin
COPY static /root/bonsai/static
COPY config.chunk-container /root/bonsai/config.chunk-container
RUN ["chmod", "a+x", "/root/bonsai/frontend-server.bin"]

EXPOSE 8000
ENTRYPOINT ["/root/bonsai/frontend-server.bin"]
