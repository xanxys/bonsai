{
    "apiVersion": "v1",
    "kind": "ReplicationController",
    "metadata": {
        "name": "bonsai-staging-frontend-rc",
        "labels": {
            "env": "staging"
        }
    },
    "spec": {
        "replicas": 1,
        "selector": {
            "name": "frontend",
            "env": "staging"
        },
        "template": {
            "spec": {
                "containers": [{
                    "name": "bonsai-frontend-frontend",
                    "image": "gcr.io/bonsai-genesis/bonsai_container",
                    "ports": [{
                        "containerPort": 8000
                    }],
                    "command": ["/root/bonsai/frontend-server.bin"]
                }]
            },
            "metadata": {
                "labels": {
                    "name": "frontend",
                    "env": "staging"
                }
            }
        }
    }
}
